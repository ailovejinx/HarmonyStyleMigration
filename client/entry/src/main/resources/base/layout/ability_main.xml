<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="top"
    ohos:orientation="vertical"
    ohos:background_element="$media:index_bg">

    <Image
        ohos:id="$+id:fan_show"
        ohos:height="140vp"
        ohos:width="match_parent"
        ohos:top_margin="40vp"
        ohos:image_src="$media:fan_show"
        ohos:scale_mode="center"
        ohos:scale_x="2.8"
        ohos:scale_y="2.8"
        />
    <Image
        ohos:id="$+id:image_landscape"
        ohos:below="$id:fan_show"
        ohos:height="170vp"
        ohos:width="match_parent"
        ohos:image_src="$media:index_landscape"
        ohos:scale_mode="center"
        ohos:scale_x="1.1"
        ohos:scale_y="1.1"
        />
    <Button
        ohos:id="$+id:buttonLandscape"
        ohos:below="$id:image_landscape"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:center_in_parent="true"
        ohos:text_alignment="center"
        ohos:text="山水画风格迁移"
        ohos:text_font="serif"
        ohos:text_size="25vp"
        />
    <Image
        ohos:id="$+id:image_vangogh"
        ohos:below="$id:buttonLandscape"
        ohos:height="170vp"
        ohos:width="match_parent"
        ohos:top_margin="40vp"
        ohos:image_src="$media:index_vangogh"
        ohos:scale_mode="center"
        ohos:scale_x="1.1"
        ohos:scale_y="1.1"
        />
    <Button
        ohos:id="$+id:buttonVangogh"
        ohos:below="$id:image_vangogh"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:center_in_parent="true"
        ohos:text_alignment="center"
        ohos:text="梵高风格迁移"
        ohos:text_font="serif"
        ohos:text_size="25vp"
        />
    <Button
        ohos:id="$+id:buttonTheory"
        ohos:below="$id:buttonVangogh"
        ohos:left_of="$id:buttonVersion"
        ohos:center_in_parent="true"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:right_margin="10vp"
        ohos:text_alignment="center"
        ohos:text="迁移原理"
        ohos:text_font="serif"
        ohos:text_size="20vp"
        ohos:align_parent_bottom="true"
        />
    <Button
        ohos:id="$+id:buttonVersion"
        ohos:below="$id:buttonVangogh"
        ohos:align_parent_end="true"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:right_margin="95vp"
        ohos:text_alignment="center"
        ohos:text="版本信息"
        ohos:text_font="serif"
        ohos:text_size="20vp"
        ohos:align_parent_bottom="true"
        />
</DependentLayout>
